<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="bulma.min.css" />
    <script
      defer
      src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
    ></script>
  </head>
  <body>
    <section class="section">
      <div class="columns is-desktop is-vcentered">
        <div
          class="column is-10 is-offset-1 notification is-info is-light box container"
        >
          <div class="title">Web Users</div>
          <% if (locals.allUsers) { %>
          <div class="table-container">
            <table class="table is-bordered is-hoverable is-striped is-narrow">
              <thead>
                <tr>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>
                </tr>
              </thead>
              <tbody>
                <% allUsers.forEach(user => { %>
                <tr>
                  <td><%= user.first_name %></td>
                  <td><%= user.last_name %></td>
                  <td><%= user.email %></td>
                </tr>
                <% }) %>
              </tbody>
              <tfoot>
                <tr>
                  <td colspan="3">There are <%= allUsers.length %> users.</td>
                </tr>
              </tfoot>
            </table>
          </div>
          <% } else { %>
          <p>No users found.</p>
          <% } %>
        </div>
      </div>
    </section>
  </body>
</html>
